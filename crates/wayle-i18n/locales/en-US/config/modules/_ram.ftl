    .description = Symbolic icon name

settings-modules-ram-border-show = Show Border
    .description = Display border around button

settings-modules-ram-border-color = Border Color
    .description = Border color token

settings-modules-ram-icon-show = Show Icon
    .description = Display module icon

settings-modules-ram-icon-color = Icon Color
